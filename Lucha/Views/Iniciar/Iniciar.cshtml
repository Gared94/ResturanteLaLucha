@model Lucha.Models.Users
@{
    ViewBag.Title = "Iniciar";
    Layout = "~/Views/Shared/_layout2.cshtml";
}

@using (Html.BeginForm("Iniciar", "Iniciar", FormMethod.Post))
{
    <fieldset>
        <link href="~/Content/Site.css" rel="stylesheet" />
        @*<legend class="text-center">Inicio de sesion para Medi Center</legend>*@

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }




        <div class="form-wrapper">
            @*<img src="https://i.ibb.co/12nDjWB/user.png" class="user">
                <h2>Login</h2>*@
            <form>
                @*<img src="~/images/huachana_7.PNG" />*@
              
                <label>@Html.LabelFor(a => a.Usuario)</label>
                @Html.TextBoxFor(a => a.Usuario)
                @Html.ValidationMessageFor(a => a.Usuario)

                @Html.LabelFor(a => a.Password, "Contraseña")

                @Html.PasswordFor(a => a.Password)
                @Html.ValidationMessageFor(a => a.Password)

                <input type="submit" value="Ingresar" class="btn btn-success" />

                <label>
                   
                </label>
            </form>
        </div>
    </fieldset>
}

